    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mediumpad">
                <ImageView android:background="@drawable/new_style_circle2" android:padding="@dimen/bigpad" android:layout_width="150sp" android:layout_height="150sp" android:src="@drawable/ic_new_router2"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:background="@drawable/style9" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/mediumpad">
                        <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ONT QUICK SET UP WIZARD"/>
                        <TextView android:textSize="@dimen/smalltext" android:textStyle="normal|bold|italic" android:textColor="@color/colorblack" android:gravity="top|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="(Please Login With Correct ONT Login Credentials)"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputLayout android:layout_gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:layout_marginRight="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad" android:hint="ONT TYPE" android:layout_weight="1" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:id="@+id/txt_model1" android:layout_width="match_parent" android:layout_height="match_parent" android:editable="false"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout android:layout_gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad" android:hint="ONT MAKE" android:layout_weight="1" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:id="@+id/txt_model2" android:layout_width="match_parent" android:layout_height="match_parent" android:editable="false"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_ont_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="USERNAME" android:maxLines="1" android:drawableLeft="@drawable/ic_new_username" android:drawablePadding="@dimen/mediumpad" android:inputType="textPersonName" android:imeOptions="actionNext"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mediumpad" android:layout_marginBottom="@dimen/bigpad" app:passwordToggleEnabled="true" app:passwordToggleTint="@color/colorAccent" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_ont_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="PASSWORD" android:maxLines="1" android:drawablePadding="@dimen/mediumpad" android:inputType="textPassword" android:imeOptions="actionNext" android:drawableStart="@drawable/ic_new_password"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <Button android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_gravity="center" android:id="@+id/btn_submit" android:background="@drawable/button" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/bigpad" android:text="Login"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="bottom" android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textSize="@dimen/smalltext" android:textStyle="normal|bold|italic" android:textColor="@color/colorRed" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="* Above ONT List Are Tested ONTs, But All Dual Band ONT With Realtek Chipset Is Supported."/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
