<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:id="@+id/linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="8" android:layoutDirection="ltr">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_alarm" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_new_notification_major"/>
                <TextView android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Title" style="@style/TextAppearance.Compat.Notification.Title"/>
            </LinearLayout>
            <TextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.Compat.Notification.Info"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2">
            <ImageView android:id="@+id/icon" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/bsnl_logo"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text="Description" android:layout_weight="3" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text=":" android:layout_weight="1" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:id="@+id/desc" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="6" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text="Location" android:layout_weight="3" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text=":" android:layout_weight="1" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:id="@+id/loc" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="6" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text="InterFace" android:layout_weight="3" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text=":" android:layout_weight="1" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:id="@+id/interfac" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="6" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text="Traffic (Up/Dn)" android:layout_weight="3" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text=":" android:layout_weight="1" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:id="@+id/traffic" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="6" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text="Sampled Time" android:layout_weight="3" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:layout_width="0sp" android:layout_height="wrap_content" android:text=":" android:layout_weight="1" style="@style/TextAppearance.Compat.Notification.Info"/>
        <TextView android:id="@+id/time" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="6" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
</LinearLayout>
