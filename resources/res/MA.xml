    <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center_vertical" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="BNG" android:layout_weight="1"/>
                <Spinner android:id="@+id/sp_bngcode" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center_vertical" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="USERID" android:layout_weight="1"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/radio" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:weightSum="2" android:layout_weight="2">
                    <RadioButton android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:id="@+id/radio_bbtest" android:layout_width="0sp" android:layout_height="match_parent" android:checked="true" android:text="BBTEST" android:layout_weight="1"/>
                    <RadioButton android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:id="@+id/radio_multiplay" android:layout_width="0sp" android:layout_height="wrap_content" android:text="MULTIPLAY" android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:layout_gravity="right" android:id="@+id/btn_portverify" android:background="@drawable/button" android:padding="@dimen/mediumpad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/bigpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/bigpad" android:layout_marginBottom="@dimen/smallpad" android:text="SUBMIT"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lay_portverify" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad">
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_portverify" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ScrollView android:scrollbarStyle="outsideInset" android:scrollbars="none|horizontal|vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad" android:fillViewport="true">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TableLayout android:id="@+id/tab_portverify" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
