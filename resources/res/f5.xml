<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/new_style1_2" android:paddingTop="@dimen/smallpad" android:paddingBottom="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="PHONE NO"/>
        <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(DOCKET NO : 121139138913)"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/mediumpad" android:text="Please Enter The Olt Login Credentials"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/style9" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/mediumpad">
            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHighlight="@color/colorPrimary" android:textColorHint="@color/Grey" android:id="@+id/et_olt_uid" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="OLT LOGIN ID" android:maxLines="1" android:inputType="textPersonName" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" app:passwordToggleEnabled="true" app:passwordToggleTint="@color/colorPrimary">
            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_olt_pwd" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="OLT PASSWORD" android:maxLines="1" android:inputType="textPassword" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" app:passwordToggleEnabled="true" app:passwordToggleTint="@color/colorPrimary">
            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_olt_en_pwd" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="OLT ENABLE PASSWORD" android:maxLines="1" android:inputType="textPassword" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/smallpad">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="0sp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:layout_weight="1">
                <EditText android:enabled="false" android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:gravity="center_vertical" android:id="@+id/et_olt_make" android:background="@color/colorwhite" android:paddingTop="@dimen/mediumpad" android:paddingBottom="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="OLT MAKE" android:maxLines="1" android:inputType="textPersonName" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner android:id="@+id/sp_olt_genere" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/bigpad" android:weightSum="2">
        <TextView android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="center" android:id="@+id/txt_cancel" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1"/>
        <TextView android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="center" android:id="@+id/txt_update" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="UPDATE" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
