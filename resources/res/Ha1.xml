<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/toolbar" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="FMS"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/img_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/bigpad" android:src="@drawable/ic_action_home" android:contentDescription="TODO"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/lay_fms_login" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="10">
            <LinearLayout android:padding="@dimen/bigpad" android:layout_width="match_parent" android:layout_height="0sp" android:layout_weight="2.5">
                <ImageView android:id="@+id/imageView" android:layout_width="match_parent" android:layout_height="match_parent" android:contentDescription="TODO" app:srcCompat="@drawable/bsnl_logo1"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0sp" android:layout_weight="7.5">
                <ScrollView android:background="@drawable/style9" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mediumpad" android:layout_marginBottom="@dimen/bigpad">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <LinearLayout android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/bigpad">
                            <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="FRANCHISEE MANAGEMENT SYSTEM"/>
                            <TextView android:textSize="@dimen/smalltext" android:textStyle="normal|bold|italic" android:textColor="@color/colorblack" android:gravity="top|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="(Please Login With Your FMS/DSCM Credentials)"/>
                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_fms_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="FMS USERNAME" android:maxLines="1" android:drawableLeft="@drawable/ic_new_username" android:drawablePadding="@dimen/mediumpad" android:inputType="textPersonName" android:imeOptions="actionNext"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:passwordToggleEnabled="true" app:passwordToggleTint="@color/colorAccent" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_fms_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="FMS PASSWORD" android:maxLines="1" android:drawablePadding="@dimen/mediumpad" android:inputType="textPassword" android:imeOptions="actionNext" android:drawableStart="@drawable/ic_new_password"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                            <CheckBox android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:id="@+id/chk_fms_rememberme" android:layout_width="0sp" android:layout_height="match_parent" android:layout_margin="@dimen/smallpad" android:layout_marginLeft="@dimen/mediumpad" android:checked="true" android:text="  Remember Me." android:layout_weight="1"/>
                            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorAccentdark" android:gravity="center" android:id="@+id/tv_fms_forgotpassword" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="FORGOT PASSWORD?" android:layout_weight="1"/>
                        </LinearLayout>
                        <Button android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_gravity="center" android:id="@+id/btn_fms_Login" android:background="@drawable/button" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/mediumpad" android:layout_marginBottom="@dimen/smallpad" android:text="Login"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/progressbar_fms_login" android:background="@drawable/style11" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_width="50dp" android:layout_height="50dp" android:indeterminateDrawable="@drawable/progressbar"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
