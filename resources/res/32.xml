<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="100sp" android:layout_margin="@dimen/mediumpad" android:src="@drawable/ic_new_warning"/>
    <TextView android:textSize="@dimen/bigtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="LOGOUT"/>
    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Are You Sure You Want To Logout"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/bigpad" android:weightSum="2">
        <TextView android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="center" android:id="@+id/txt_cancel" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1"/>
        <TextView android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="center" android:id="@+id/txt_submit" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="LOGOUT" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
