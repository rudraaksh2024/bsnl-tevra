<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="horizontal" android:id="@+id/linear_layout" android:layout_width="match_parent" android:layout_height="48dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="8">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_alarm" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_new_notification_major"/>
            <TextView android:gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Title" style="@style/TextAppearance.Compat.Notification.Title"/>
        </LinearLayout>
        <TextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.Compat.Notification.Info"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2">
        <ImageView android:id="@+id/icon" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_action_icon"/>
    </LinearLayout>
</LinearLayout>
