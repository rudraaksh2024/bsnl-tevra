            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:text="ORDER BOOKED ON" android:layout_weight="1"/>
