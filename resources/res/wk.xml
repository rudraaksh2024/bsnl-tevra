<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/back_test" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REPORT"/>
            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_gravity="bottom" android:id="@+id/txt_element" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  (OLT-REBOOT)"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lay1" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mediumpad" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="START DATE" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2" android:layoutDirection="rtl">
                    <ImageView android:id="@+id/img_cal1" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:src="@drawable/ic_new_calender"/>
                    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_start_date" android:background="@drawable/style17" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="-- SELECT START DATE --" android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="END DATE" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2" android:layoutDirection="rtl">
                    <ImageView android:id="@+id/img_cal2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:src="@drawable/ic_new_calender"/>
                    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_end_date" android:background="@drawable/style17" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="-- SELECT END DATE --" android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:layout_gravity="right" android:id="@+id/btn_submit" android:background="@drawable/button" android:padding="@dimen/mediumpad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/bigpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/bigpad" android:layout_marginBottom="@dimen/smallpad" android:text="SUBMIT"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lay2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/smallpad">
            <ListView android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/smallpad" android:divider="@color/colorwhite" android:dividerHeight="@dimen/smallpad"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
