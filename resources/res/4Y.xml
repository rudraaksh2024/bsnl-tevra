<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="80sp" android:layout_marginTop="@dimen/mediumpad" android:layout_marginBottom="@dimen/mediumpad" android:src="@drawable/ic_new_consent"/>
    <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_alert" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CONFIGURATION BACKUP"/>
    <CheckBox android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:id="@+id/chk_consent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" android:checked="true" android:text="  Retain A Copy Of The Configuration In OLT."/>
    <TextView android:textSize="@dimen/smalltext" android:textStyle="normal|bold|italic" android:textColor="@color/colorRed" android:gravity="left" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="[Recommended] By Checking, the ONT loads the stored configuration file from OLT upon each reboot."/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/bigpad" android:weightSum="2">
        <TextView android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="center" android:id="@+id/txt_cancel" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1"/>
        <TextView android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="center" android:id="@+id/txt_update" android:background="@drawable/style17" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="UPDATE" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
