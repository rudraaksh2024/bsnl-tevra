                <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorblack" android:id="@+id/txt_ssid_asso2" android:paddingLeft="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="1"/>
