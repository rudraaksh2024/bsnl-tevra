<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/new_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10">
    <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1.5">
        <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_srno" android:background="@drawable/ic_new_circle_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="99"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="8">
        <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="OLT-IP : 10.215.58.121 | OLT-VLAN : 3731"/>
        <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_vendor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(BSNL)"/>
        <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad" android:text="Site Inspected By"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
            <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center_vertical" android:id="@+id/chk_bbc" android:layout_width="0sp" android:layout_height="wrap_content" android:text="BBC" android:drawableLeft="@drawable/ic_new_check" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center_vertical" android:id="@+id/chk_oa" android:layout_width="0sp" android:layout_height="wrap_content" android:text="OA Head" android:drawableLeft="@drawable/ic_new_close" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center_vertical" android:id="@+id/chk_ba" android:layout_width="0sp" android:layout_height="wrap_content" android:text="BA Head" android:drawableLeft="@drawable/ic_new_close" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lay_insp_period" android:background="@drawable/new_style3" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1.5">
        <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_insp_period" android:padding="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
