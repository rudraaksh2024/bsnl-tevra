<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/back_test" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NETWORK GLANCE"/>
            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_gravity="bottom" android:id="@+id/txt_element" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  (TIP)"/>
        </LinearLayout>
        <ToggleButton android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/toggleButton1" android:background="@drawable/toggle_selector" android:layout_width="wrap_content" android:layout_height="15dp" android:layout_marginRight="@dimen/bigpad" android:checked="false" android:textOn="" android:textOff="" android:text=""/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_network_galance" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_header" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/lay_brief" android:layout_width="match_parent" android:layout_height="match_parent">
                <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:orientation="vertical" android:id="@+id/lay_brief_1" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </ScrollView>
                <LinearLayout android:orientation="vertical" android:id="@+id/lay_brief_2" android:padding="@dimen/bigpad" android:visibility="gone" android:layout_width="match_parent" android:layout_height="200sp" android:layout_centerInParent="true">
                    <ImageView android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="100sp" android:src="@drawable/ic_action_check"/>
                    <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/txt_congrate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CONRATULATIONS NO OLT IS DOWN AT PRESENT" android:layout_alignParentBottom="true"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lay_detail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <EditText android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_search" android:background="@drawable/new_style_search" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:hint="SEARCH KEYWORD" android:maxLines="1" android:drawableLeft="@drawable/ic_new_search"/>
                <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/smallpad" android:fillViewport="true" android:fadeScrollbars="false">
                    <HorizontalScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
                        <LinearLayout android:orientation="vertical" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TableLayout android:id="@+id/tbl_detail" android:layout_width="match_parent" android:layout_height="match_parent"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
