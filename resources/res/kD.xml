<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/mediumpad" app:cardCornerRadius="16dp" app:cardElevation="4dp">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:layout_width="72dp" android:layout_height="72dp" android:layout_margin="@dimen/mediumpad" android:src="@drawable/ic_new_info"/>
        <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="5dp" android:layout_marginVertical="@dimen/bigpad"/>
        <CheckBox android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorRed" android:id="@+id/chk_dnd" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/smallpad" android:text="  Do Not Remind Me Again." android:layout_weight="1" android:layout_marginHorizontal="@dimen/bigpad"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/bigpad" android:weightSum="2">
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="left" android:id="@+id/txt_cancel" android:layout_width="0sp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1" android:paddingHorizontal="@dimen/bigpad"/>
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="right" android:id="@+id/txt_settings" android:layout_width="0sp" android:layout_height="match_parent" android:text="SETTINGS" android:layout_weight="1" android:paddingHorizontal="@dimen/bigpad"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
