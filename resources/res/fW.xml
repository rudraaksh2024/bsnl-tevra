<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/toolbar" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WHATS NEW"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_video" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView android:id="@+id/video_play" android:layout_width="match_parent" android:layout_height="wrap_content" app:autoPlay="false"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_whatsnew" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/style1" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <CheckBox android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:id="@+id/chk_marked_as_view" android:layout_width="0sp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/smallpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad" android:checked="false" android:text="  Marked as Viewed" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorAccentdark" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_skip" android:layout_width="0sp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/smallpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/bigpad" android:layout_marginBottom="@dimen/smallpad" android:text="SKIP DEMO" android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView android:background="@drawable/style1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad">
            <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:gravity="center" android:id="@+id/txt_tv1" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="WHATS NEW IN TEEVRA V-2.7.1"/>
                <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/txt_tv2" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1.  ANDROID COMPATIBILITY FIX"/>
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorPrimaryDark" android:id="@+id/txt_tv2_2" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Some features of the BSNL Teevra app, including camera functionality and file operations, were reportedly not working on devices running the latest Android versions.This update ensures compliance with latest Android permissions and improves stability and privacy." android:lineSpacingExtra="@dimen/smallpad"/>
                <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/txt_tv3" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2.  OLT SITE INSPECTION"/>
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorPrimaryDark" android:id="@+id/txt_tv3_3" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="The Olt Site Inspection feature is integrated with CDR3 system" android:lineSpacingExtra="@dimen/smallpad"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
