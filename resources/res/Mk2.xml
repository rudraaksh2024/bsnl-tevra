<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/mediumpad" app:cardCornerRadius="16dp" app:cardElevation="4dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="@dimen/mediumpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="BHARAT FIBER BROADBAND PROVISIONING FORM" android:drawableLeft="@drawable/ic_action_icon" android:paddingVertical="@dimen/mediumpad"/>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/telephoneInputLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/LightGrey" android:id="@+id/et_Telephone" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Telephone No" android:maxLines="1" android:inputType="textPersonName" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/bbUserIdInputLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/colorAccent" android:id="@+id/et_BbUserId" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="BB UserId" android:maxLines="1" android:inputType="textPersonName" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/serialNumberInputLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/mediumtext" android:id="@+id/et_SerialNo" android:focusable="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Serial Number" android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/ipDropdownMenu" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" android:hint="Select Olt" android:layout_weight="1" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView android:id="@+id/sp_OltIp" android:focusable="false" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/vlanDropdownMenu" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad" android:hint="Select Olt" android:layout_weight="1" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView android:id="@+id/sp_OltVlan" android:focusable="false" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/cVlanInputLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/smallpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/smallpad" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:textColorHint="@color/colorAccent" android:id="@+id/et_CustomerVlan" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Customer Vlan" android:maxLines="1" android:inputType="number" android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:gravity="right" android:id="@+id/txt_vlan_validation" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:enabled="false" android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:layout_gravity="left" android:id="@+id/checkbox_confirm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Information Is Verified &amp; Correct To The Best Of My Knowledge." android:buttonTint="@color/colorAccent"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/mediumpad" android:weightSum="2">
            <TextView android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="left" android:id="@+id/txt_cancel" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1" android:layout_marginHorizontal="@dimen/mediumpad"/>
            <TextView android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="right" android:id="@+id/txt_submit" android:padding="@dimen/mediumpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="PROCEED" android:layout_weight="1" android:layout_marginHorizontal="@dimen/mediumpad"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
