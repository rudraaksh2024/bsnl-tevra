<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/back_test" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/toolbar" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize" android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REPORTS"/>
            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  OLT REBOOT"/>
        </LinearLayout>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/img_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/bigpad" android:src="@drawable/ic_action_home" android:contentDescription="TODO"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lay1" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mediumpad" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="wrap_content" android:text="CIRCLE" android:layout_weight="1"/>
                <Spinner android:id="@+id/sp_circle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="wrap_content" android:text="OA" android:layout_weight="1"/>
                <Spinner android:id="@+id/sp_ssa" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="START DATE" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2" android:layoutDirection="rtl">
                    <ImageView android:id="@+id/img_cal1" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:src="@drawable/ic_new_calender"/>
                    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_start_date" android:background="@drawable/style17" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="-- SELECT START DATE --" android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:layout_gravity="center" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="END DATE" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="2" android:layoutDirection="rtl">
                    <ImageView android:id="@+id/img_cal2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/mediumpad" android:layout_marginRight="@dimen/mediumpad" android:src="@drawable/ic_new_calender"/>
                    <TextView android:textSize="@dimen/mediumtext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_end_date" android:background="@drawable/style17" android:padding="@dimen/smallpad" android:layout_width="0dp" android:layout_height="match_parent" android:text="-- SELECT END DATE --" android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:layout_gravity="right" android:id="@+id/btn_submit" android:background="@drawable/button" android:padding="@dimen/mediumpad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/bigpad" android:layout_marginTop="@dimen/smallpad" android:layout_marginRight="@dimen/bigpad" android:layout_marginBottom="@dimen/smallpad" android:text="SUBMIT"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/lay2" android:background="@drawable/new_style" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/smallpad">
            <LinearLayout android:orientation="horizontal" android:background="@drawable/new_style1_1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1"/>
                <LinearLayout android:orientation="vertical" android:padding="@dimen/xsmallpad" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="9">
                    <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_header1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="CIRCLE : PUNJAB | SSA : CHANDIGARH"/>
                    <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_header2" android:padding="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2024-02-01 TO 2024-02-24"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1">
                    <ImageView android:layout_gravity="center" android:id="@+id/img_download" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_new_download"/>
                </LinearLayout>
            </LinearLayout>
            <EditText android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:textColorHint="@color/Grey" android:id="@+id/et_search" android:background="@drawable/new_style_search" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad" android:hint="SEARCH KEYWORD" android:maxLines="1" android:drawableLeft="@drawable/ic_new_search"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btnLay" android:paddingLeft="@dimen/xsmallpad" android:paddingTop="@dimen/xsmallpad" android:paddingRight="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad">
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/prev" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/smallpad" android:layout_marginRight="@dimen/smallpad" android:text="PREV"/>
                <HorizontalScrollView android:id="@+id/horizontalScrollView" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/lay_btn" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </HorizontalScrollView>
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/next" android:background="@drawable/button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/smallpad" android:layout_marginRight="@dimen/smallpad" android:text="NEXT"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ListView android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/smallpad" android:divider="#ede7f6" android:dividerHeight="@dimen/smallpad"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
