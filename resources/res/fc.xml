            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TableLayout android:id="@+id/table" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_remark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/smallpad"/>
</LinearLayout>
