<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/new_style" android:padding="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/new_style10" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_srno" android:background="@drawable/ic_new_circle_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="999"/>
