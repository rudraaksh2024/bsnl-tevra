            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_pon" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="EPON0/1:1"/>
        </LinearLayout>
    </LinearLayout>
