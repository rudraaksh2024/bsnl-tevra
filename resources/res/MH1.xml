<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/new_style" android:padding="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/new_style10" android:padding="@dimen/smallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:id="@+id/txt_srno" android:background="@drawable/ic_new_circle_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="999"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="8">
            <TextView android:textSize="@dimen/mediumtext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_firm" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="AKHILESHWAR TRADING CO0."/>
            <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(DAPPER, CHD)"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0sp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:id="@+id/img_share" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_new_share"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="@dimen/xsmallpad" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0sp" android:layout_height="wrap_content" android:layout_weight="4">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:text="OLT IP" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:text="OLT VLAN" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorblack" android:gravity="center" android:layout_width="0sp" android:layout_height="match_parent" android:text="REBOOT COUNT" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_ip" android:layout_width="0sp" android:layout_height="match_parent" android:text="OLT IP" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/smalltext" android:textColor="@color/colorblack" android:gravity="center" android:id="@+id/txt_vlan" android:layout_width="0sp" android:layout_height="match_parent" android:text="OLT VLAN" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/bigtext" android:textStyle="bold" android:textColor="@color/colorRed" android:gravity="center" android:id="@+id/txt_count" android:layout_width="0sp" android:layout_height="match_parent" android:text="10" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="center_vertical" android:id="@+id/txt_bbc" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="BBM" android:drawableLeft="@drawable/ic_new_phone1"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_reboot_detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/smallpad" android:layout_marginBottom="@dimen/smallpad">
        <TableLayout android:id="@+id/table_reboot_detail" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:background="@drawable/new_style1" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="SR" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:background="@drawable/new_style1" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="ALARM DESCRIPTION" android:layout_weight="7.5"/>
                <TextView android:textSize="@dimen/smalltext" android:textStyle="bold" android:textColor="@color/colorwhite" android:gravity="center" android:background="@drawable/new_style1" android:padding="@dimen/smallpad" android:layout_width="0sp" android:layout_height="match_parent" android:text="TIMESTAMP" android:layout_weight="3.5"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
